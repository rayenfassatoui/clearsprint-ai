# Database Configuration (Neon Postgres)
DATABASE_URL="postgresql://user:password@host/dbname?sslmode=require"

# Atlassian / Jira Integration
# 1. Create an app at https://developer.atlassian.com/console/myapps/
# 2. Under Authorization, add this EXACT callback URL:
#    - For local dev: http://localhost:3000/api/auth/callback/atlassian
#    - For production: https://yourdomain.com/api/auth/callback/atlassian
# 3. Enable these scopes: read:jira-user, read:jira-work, write:jira-work, read:me, manage:jira-project, offline_access
ATLASSIAN_CLIENT_ID="your_atlassian_client_id"
ATLASSIAN_CLIENT_SECRET="your_atlassian_client_secret"

# S3 Compatible Storage (Minio, AWS S3, Cloudflare R2, etc.)
S3_ENDPOINT="https://s3.ashref.tn"
S3_ACCESS_KEY="your_access_key"
S3_SECRET_KEY="your_secret_key"
S3_BUCKET_NAME="clearsprint-docs"
S3_REGION="us-east-1"

# Authentication (Better Auth)
# Generate a secret using `openssl rand -base64 32`
BETTER_AUTH_SECRET="your_better_auth_secret"
BETTER_AUTH_URL="http://localhost:3000"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# AI Configuration (OpenAI Compatible)
# Use OpenRouter, OpenAI, or any compatible provider
OPENAI_BASE_URL="https://openrouter.ai/api/v1"
OPENAI_API_KEY="sk-or-v1-..."
OPENAI_MODEL_NAME="gpt-4o-mini"
